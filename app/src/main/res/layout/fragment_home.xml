<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/img_box_cat"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/img_home"
        app:layout_constraintEnd_toEndOf="@id/img_home"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="@id/img_home"
        app:layout_constraintTop_toTopOf="@id/img_home"
        app:layout_constraintVertical_bias="0.551"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_box_landscape"
        android:layout_width="60dp"
        android:layout_height="67dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/img_home"
        app:layout_constraintEnd_toEndOf="@id/img_home"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@id/img_home"
        app:layout_constraintTop_toTopOf="@id/img_home"
        app:layout_constraintVertical_bias="0.551"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_box_nasa"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/img_home"
        app:layout_constraintEnd_toEndOf="@id/img_home"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="@id/img_home"
        app:layout_constraintTop_toTopOf="@id/img_home"
        app:layout_constraintVertical_bias="0.539"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_box_movie"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/img_home"
        app:layout_constraintEnd_toEndOf="@id/img_home"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@id/img_home"
        app:layout_constraintTop_toTopOf="@id/img_home"
        app:layout_constraintVertical_bias="0.543"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_home"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/room"
        android:padding="8dp"
        android:paddingBottom="15dp"
        android:transitionName="image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/bt_text_home"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_button"
        android:elevation="5dp"
        android:text="@string/nav_header_title"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_home"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_text_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>