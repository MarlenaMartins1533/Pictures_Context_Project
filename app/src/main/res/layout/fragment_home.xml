<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/homeIMG"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/room"
        android:padding="8dp"
        android:paddingBottom="15dp"
        android:transitionName="image"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/box_catIMG"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/homeIMG"
        app:layout_constraintEnd_toEndOf="@id/homeIMG"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="@id/homeIMG"
        app:layout_constraintTop_toTopOf="@id/homeIMG"
        app:layout_constraintVertical_bias="0.551"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/box_landscapeIMG"
        android:layout_width="60dp"
        android:layout_height="67dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/homeIMG"
        app:layout_constraintEnd_toEndOf="@id/homeIMG"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@id/homeIMG"
        app:layout_constraintTop_toTopOf="@id/homeIMG"
        app:layout_constraintVertical_bias="0.551"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/box_myIMG"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/homeIMG"
        app:layout_constraintEnd_toEndOf="@id/homeIMG"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="@id/homeIMG"
        app:layout_constraintTop_toTopOf="@id/homeIMG"
        app:layout_constraintVertical_bias="0.539"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/box_movieIMG"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/homeIMG"
        app:layout_constraintEnd_toEndOf="@id/homeIMG"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@id/homeIMG"
        app:layout_constraintTop_toTopOf="@id/homeIMG"
        app:layout_constraintVertical_bias="0.543"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/homeBTN"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_button"
        android:elevation="5dp"
        android:text="@string/nav_header_title"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeIMG" />

    <TextView
        android:id="@+id/homeTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="5dp"
        android:padding="16dp"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeBTN" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/homeTXT">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView_help"
                android:background="@color/colorCream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/help"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:elevation="7dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/helpTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:text="@string/instructions"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>